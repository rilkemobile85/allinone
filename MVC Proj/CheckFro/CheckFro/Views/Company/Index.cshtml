@{
}
@model CheckFro.Models.CompanyModel
@using (Html.BeginForm("index","Company",FormMethod.Post))
{
    <h1 style="color:olivedrab">Input Details</h1>
    <br />
    <br />
    <b>Enter Name :</b>
    <br />
    @Html.TextBoxFor(m=>m.empname)
    <br />
    <br />
    <span>Manager :</span>
    @Html.RadioButtonFor(m=>m.desig,"manager")
    <span> | Clerk :</span>
    @Html.RadioButtonFor(m=>m.desig,"clerk")
    <span> | Peon :</span>
    @Html.RadioButtonFor(m=>m.desig,"peon")
    <br />
    <br />
    <b>Enter basic salary :</b>
    <br />
    @Html.TextBoxFor(m=>m.basicsal)
    <br />
    <br />
    <input type="submit" value="  OK  " />
    <br />
    <hr />

}
<h2 style="color:darkorange">Salary Details</h2>
<br />
Employee name : @ViewBag.empname
<br />
Basic salary  : @ViewBag.basicsal
<br />
Designation   : @ViewBag.desig
<br />
TA : @ViewBag.ta
<br />
DA : @ViewBag.da
<br />
HRA : @ViewBag.hra
<br />
Total Salary : @ViewBag.totalsal
<br />

